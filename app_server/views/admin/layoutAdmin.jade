doctype html
head
    meta(charset='utf-8')
    link(rel='apple-touch-icon', sizes='76x76', href='/images/apple-icon.png')
    link(rel='icon', type='image/png', sizes='96x96', href='/images/favicon.png')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title #{title}
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    // Animation library for notifications
    link(href='/css/animate.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/css/reportBox.css', type='text/css')
    // Paper Dashboard core CSS
    link(href='/css/paper-dashboard.css', rel='stylesheet')
    // CSS for Demo Purpose, don't include it in your project
    link(href='/css/demo.css', rel='stylesheet')
    //link(href='/css/reportBox', rel='stylesheet')
    // Fonts and icons
    link(href='http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Muli:400,300', rel='stylesheet', type='text/css')
    link(href='../css/themify-icons.css', rel='stylesheet')
    script(src='/js/jquery.min.js')
    body
        .tagGetValue#tagGetValue
            | #{tag}
        style
            |    #tagGetValue{
            |        display: none;
            |    }
        .wrapper
            .sidebar(data-background-color='white', data-active-color='danger')
                //
                  Tip 1: you can change the color of the sidebar's background using: data-background-color="white | black"
                  Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
                .sidebar-wrapper
                    .logo
                        a.simple-text(href='/')
                            | benh vien admin site
                    ul.nav
                        li#admin
                            a(href='/admin')
                                i.ti-panel
                                p Main
                        li#benhnhan
                            a(href='/admin/benhnhan')
                                i.ti-user
                                p Bệnh nhân
                        li#benhan
                            a(href='/admin/benhan')
                                i.ti-view-list-alt
                                p Bênh án
                        li#vienphi
                            a(href='/admin/vienphi')
                                i.ti-text
                                p Viện phí
                        li#dichvu
                            a(href='/admin/dichvu')
                                i.ti-service
                                p Dịch vụ
                        li#loaithuoc
                            a(href='/admin/loaithuoc')
                                i.ti-map
                                p Loại thuốc
                        li#toathuoc
                            a(href='/admin/toathuoc')
                                i.ti-bell
                                p Toa thuốc
                        li#contact
                            a(href='/admin/contact')
                                i.ti-text
                                p Hòm thư
            .main-panel
                include ./adminHeader
                block adminContent
                include ./adminFooter
    script(src='/js/popup.js')
    script(type='text/javascript').
        $(document).ready(function () {
            var tag = document.getElementById('tagGetValue').innerHTML;
            var d = document.getElementById(tag);
            d.className += " active";
        });

